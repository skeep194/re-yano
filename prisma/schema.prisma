generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/reyano.db"
}

model DiscordERUser {
  id Int @id @default(autoincrement())
  @@unique([discordId, erId, guildId])
  discordId String
  guildId String?
  erId Int
}

model SystemUser {
  id Int @id @default(autoincrement())
  point Int @default(50)
  @@unique([discordId, guildId])
  discordId String
  guildId String?
  lastAttendanceTime DateTime @default("1970-01-01T00:00:00.000Z")
  ObserveRankGame ObserveRankGame[]
}

enum ObserveRankGameStatus {
  WATCHING
  DONE
}

model ObserveRankGame {
  id Int @id @default(autoincrement())
  @@unique([erId, systemUserid])
  erId Int
  systemUser SystemUser @relation(fields: [systemUserid], references: [id])
  systemUserid Int
  status ObserveRankGameStatus @default(WATCHING)
  createAt DateTime @default(now())
  batPoint Int
  channelId String
  expectedRank Int
}

model ErArticle {
  id Int @id
  thumbnailUrl String?
  createAt DateTime
  updateAt DateTime
  url String
  title String
  summary String
}

model ArticleSubscribe {
  id Int @id @default(autoincrement())
  channelId String @unique
}